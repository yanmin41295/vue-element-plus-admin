{
  "compilerOptions": {
    "lib": [
      "ESNext",
      "DOM"
    ],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "nodenext",
    "strict": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist/dts",
    "downlevelIteration": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "types": [
      // add Bun global
      "bun-types"
    ]
  }
}